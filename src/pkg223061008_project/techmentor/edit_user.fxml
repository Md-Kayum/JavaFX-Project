<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="pkg223061008_project.techmentor.Edit_userController"
            prefWidth="350" prefHeight="250">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Edit User Info" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="roleField" promptText="Role"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Save" onAction="#handleSave"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>
