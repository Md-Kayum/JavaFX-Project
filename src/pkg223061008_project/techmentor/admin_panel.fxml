<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223061008_project.techmentor.Admin_panelController">

   <VBox fx:id="sidebar" prefHeight="600.0" prefWidth="179.0" spacing="20" style="-fx-background-color: black;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">

    <!-- Centered logo -->
    <HBox alignment="CENTER" prefWidth="179.0" style="-fx-padding: 20 0 10 0;">
        <ImageView fx:id="logoImageView" fitHeight="120" fitWidth="150" preserveRatio="true" smooth="true">
            <image>
                <Image url="@images/Tech%20Mentor%20Logo.png" />
            </image>
        </ImageView>
    </HBox>

    <!-- Centered buttons -->
    <HBox alignment="CENTER" prefWidth="179.0">
        <Button onAction="#handleManageUsersButton" prefWidth="140" text="Manage Users" />
    </HBox>
    <HBox alignment="CENTER" prefWidth="179.0">
        <Button onAction="#handleManageCoursesButton" prefWidth="140" text="Manage Courses" />
    </HBox>
    <HBox alignment="CENTER" prefWidth="179.0">
        <Button onAction="#handleReportsButton" prefWidth="140" text="Reports" />
    </HBox>
    <HBox alignment="CENTER" prefWidth="179.0">
        <Button onAction="#handleLogoutButton" prefWidth="140" text="Logout" />
    </HBox>

</VBox>

    <!-- Top Header -->
    <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20" style="-fx-background-color: #9667f8;" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="Admin Panel">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </Label>
    </HBox>

    <!-- Main Content Area for Dynamic Views like Dashboard -->
    <AnchorPane fx:id="mainContent" prefHeight="540.0" prefWidth="720.0" style="-fx-background-color: #F4F4F4;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
        <!-- Dashboard will be loaded here on initialize -->
    </AnchorPane>
</AnchorPane>
