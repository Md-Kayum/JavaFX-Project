<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="400" prefWidth="400" spacing="12" style="-fx-background-color: #1f2937;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223061008_project.techmentor.contactController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Contact Us" textFill="#fbf8f8" />

    <TextField fx:id="nameField" maxWidth="350" promptText="Your Name" />

    <TextField fx:id="emailField" maxWidth="350" promptText="Your Email" />

    <TextField fx:id="subjectField" maxWidth="350" promptText="Subject (optional)" />

    <TextArea fx:id="messageArea" maxWidth="350" prefRowCount="8" promptText="Your Message" wrapText="true" />

    <Button maxWidth="150" onAction="#handleSubmit" style="-fx-background-color: #2c7efc; -fx-text-fill: white; -fx-font-weight: bold;" text="Submit" />
</VBox>
