<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-background-color: white; -fx-padding: 20;"
      xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pkg223061008_project.techmentor.DashboardController">

   
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Dashboard Overview" />

   
   <HBox spacing="100.0">
    <VBox prefHeight="100" prefWidth="150" spacing="10"
          style="-fx-background-color: #4A90E2; -fx-padding: 15; -fx-background-radius: 8;">
        <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Users" />
        <Label fx:id="userCountLabel"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" />
    </VBox>
    <VBox prefHeight="100" prefWidth="150" spacing="10"
          style="-fx-background-color: #50E3C2; -fx-padding: 15; -fx-background-radius: 8;">
        <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Courses" />
        <Label fx:id="courseCountLabel"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" />
    </VBox>
    <VBox prefHeight="100" prefWidth="150" spacing="10"
          style="-fx-background-color: #F5A623; -fx-padding: 15; -fx-background-radius: 8;">
        <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Admins" />
        <Label fx:id="adminCountLabel"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" />
    </VBox>
   
    <VBox prefHeight="100" prefWidth="150" spacing="10"
          style="-fx-background-color: #D64541; -fx-padding: 15; -fx-background-radius: 8;">
        <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Messages" />
        <Label fx:id="messageCountLabel"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" />
    </VBox>
</HBox>

   
    <PieChart fx:id="userDistributionChart" prefHeight="500" prefWidth="720" />

</VBox>
