   <children>
      <Label layoutX="108.0" layoutY="38.0" text="Forgot Password" textFill="#e90b0b">
         <font>
            <Font size="24" />
         </font>
      </Label>

      <Label layoutX="30" layoutY="80" text="Enter your registered email:" textFill="#e0d9d9">
         <font>
            <Font size="15.0" />
         </font></Label>
      <TextField fx:id="emailField" layoutX="30" layoutY="110" prefWidth="340" promptText="Email" />

      <Button fx:id="verifyEmailButton" layoutX="158.0" layoutY="160.0" onAction="#handleVerifyEmail" style="-fx-background-color: #00c3ff;" text="Verify Email" />

      
